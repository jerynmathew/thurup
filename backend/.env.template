# Environment Configuration Template
# Copy this file to .env and fill in your values
# Available templates: .env.development, .env.production, .env.test

# Logging Configuration
LOG_JSON=false              # Use JSON logs (true for production, false for development)
LOG_LEVEL=INFO              # Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./thurup.db

# CORS Origins (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Admin Credentials (for /api/v1/admin endpoints)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Game Cleanup Settings (in seconds)
CLEANUP_INTERVAL=1800       # How often to run cleanup (30 minutes)
LOBBY_TIMEOUT=3600          # Delete lobby games after 1 hour
ACTIVE_TIMEOUT=7200         # Delete active games after 2 hours of inactivity
COMPLETED_TIMEOUT=86400     # Delete completed games after 24 hours
